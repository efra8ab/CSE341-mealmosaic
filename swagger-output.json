{
  "swagger": "2.0",
  "info": {
    "title": "Meal Mosaic API",
    "description": "CRUD API for recipes (Final Project Part 1, CSE341)",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/recipes/": {
      "get": {
        "tags": [
          "Recipes"
        ],
        "summary": "Retrieve all recipes",
        "description": "",
        "responses": {
          "200": {
            "description": "A list of recipes",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Recipe"
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Recipes"
        ],
        "summary": "Create a new recipe",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewRecipe"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "The created recipe",
            "schema": {
              "$ref": "#/definitions/Recipe"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/{id}": {
      "get": {
        "tags": [
          "Recipes"
        ],
        "summary": "Retrieve a single recipe",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "MongoDB identifier for the recipe"
          }
        ],
        "responses": {
          "200": {
            "description": "Recipe that matches the provided id",
            "schema": {
              "$ref": "#/definitions/Recipe"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Recipes"
        ],
        "summary": "Update a recipe",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "MongoDB identifier for the recipe"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewRecipe"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated recipe",
            "schema": {
              "$ref": "#/definitions/Recipe"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Recipes"
        ],
        "summary": "Delete a recipe",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "MongoDB identifier for the recipe"
          }
        ],
        "responses": {
          "204": {
            "description": "Recipe removed successfully"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Recipe": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "6620bcdbc0ab123456789abc"
        },
        "title": {
          "type": "string",
          "example": "Spicy Lentil Soup"
        },
        "cuisine": {
          "type": "string",
          "example": "Mediterranean"
        },
        "summary": {
          "type": "string",
          "example": "Hearty plant-based soup with warm spices."
        },
        "prepTimeMinutes": {
          "type": "number",
          "example": 20
        },
        "cookTimeMinutes": {
          "type": "number",
          "example": 35
        },
        "servings": {
          "type": "number",
          "example": 4
        },
        "ingredients": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Smoked paprika"
              },
              "quantity": {
                "type": "number",
                "example": 1
              },
              "unit": {
                "type": "string",
                "example": "tsp"
              }
            }
          }
        },
        "steps": {
          "type": "array",
          "example": [
            "Rinse lentils",
            "Saut√© aromatics",
            "Simmer until tender"
          ],
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "example": [
            "vegetarian",
            "gluten-free"
          ],
          "items": {
            "type": "string"
          }
        },
        "nutrition": {
          "type": "object",
          "properties": {
            "calories": {
              "type": "number",
              "example": 320
            },
            "protein": {
              "type": "number",
              "example": 18
            },
            "carbs": {
              "type": "number",
              "example": 45
            },
            "fat": {
              "type": "number",
              "example": 8
            }
          }
        },
        "author": {
          "type": "string",
          "example": "@chef_ava"
        }
      }
    },
    "NewRecipe": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "example": "Coconut Curry Chickpeas"
        },
        "cuisine": {
          "type": "string",
          "example": "Thai"
        },
        "prepTimeMinutes": {
          "type": "number",
          "example": 15
        },
        "cookTimeMinutes": {
          "type": "number",
          "example": 25
        },
        "servings": {
          "type": "number",
          "example": 4
        },
        "ingredients": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Red curry paste"
              },
              "quantity": {
                "type": "number",
                "example": 2
              },
              "unit": {
                "type": "string",
                "example": "tbsp"
              }
            }
          }
        },
        "steps": {
          "type": "array",
          "example": [
            "Toast curry paste",
            "Add coconut milk",
            "Simmer with chickpeas"
          ],
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "example": [
            "dairy-free"
          ],
          "items": {
            "type": "string"
          }
        },
        "nutrition": {
          "type": "object",
          "properties": {
            "calories": {
              "type": "number",
              "example": 410
            },
            "protein": {
              "type": "number",
              "example": 14
            },
            "carbs": {
              "type": "number",
              "example": 42
            },
            "fat": {
              "type": "number",
              "example": 20
            }
          }
        },
        "author": {
          "type": "string",
          "example": "Nora"
        }
      }
    }
  }
}